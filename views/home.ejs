<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="/css/style.css" rel="stylesheet" type="text/css">
        <script src="/js/jquery-3.6.0.js"></script>
        <script src="/js/functions.js"></script>
        <script src="/js/echarts.js"></script>
        <link rel="shortcut icon" href="#">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <script src="https://cdn.tailwindcss.com"></script>
        <title>Home</title>
    </head>
    <body class="bg-[#FFF89A]">
        <%- user%>
        <header class="bg-gradient-to-b from-[#36677A] to-[#1A5F7A] flex justify-between">
            <div id="logo" class="ml-[10%] mt-[20px] mb-[20px]">
                <a href="./index.html"><img class="max-w-xs max-h-xs" src="./img/logo/logoAmarillo.png"></a>
            </div>
            <div id="userExp" class="flex mr-[10%] items-center">
                <img class="max-w-[40px] max-h-[40px] mr-[20px]" src="./img/anonuser.png">
                <form>
                    <input class="max-w-[200px] max-h-[40px] mt-[20px]" type="text" placeholder="Search...">
                    <button type="submit" class="pt-[10px]"><i class="fa fa-search"></i></button>
                </form>
            </div>
        </header>
        <div id="content" class="flex">
            <div id="portfolios" class="w-[20%] bg-gradient-to-b from-[#FCF8BD] to-[#FFF89A] pt-[30px] pl-[5%]">
                <h1 class="font-bold text-2xl">Your portfolios:</h1>
                <ul class="ml-[20px]" id="portfoliosList">
                    <li><p class="portfolio text-lg max-w-[80%]">Portfolio 1</p></li>
                    <li><p class="portfolio text-lg max-w-[80%]">Portfolio 2</p></li>
                    <li><p class="portfolio text-lg max-w-[80%]">Portfolio 3</p></li>
                    <li><p class="portfolio text-lg max-w-[80%]">Portfolio 4</p></li>
                </ul>
            </div>

            <div id="portfolios" class="w-[50%] bg-gradient-to-b from-[#FCF8BD] to-[#FFF89A] pt-[30px] pl-[5%]">
                <div id="title" class="flex">
                    <h1 class="font-bold text-2xl">Portfolio 1: 100$</h1>
                    <p class="ml-[10px] p-[2px] bg-lime-600 rounded-full">+10%</p>
                </div>
                <div id="chart" style="width: 100%;height:400px;">
                    <script type="text/javascript">
                        // Initialize the echarts instance based on the prepared dom
                        var myChart = echarts.init(document.getElementById('chart'));
                
                        // Specify the configuration items and data for the chart
                        var option = {
                        title: {
                            text: 'ECharts Getting Started'
                        },
                        tooltip: {},
                        legend: {
                            data: ['sales']
                        },
                        xAxis: {
                            data: ['Shirts', 'Cardigans', 'Chiffons', 'Pants', 'Heels', 'Socks']
                        },
                        yAxis: {},
                        series: [
                            {
                            name: 'sales',
                            type: 'bar',
                            data: [5, 20, 36, 10, 10, 20]
                            }
                        ]
                        };
                
                        // Display the chart using the configuration items and data just specified.
                        myChart.setOption(option);
                    </script>
                </div>
                <hr>
                <div id="yourAssets" class="pt-[20px]">
                    <h2 class="font-bold text-xl">Your assets</h2>
                    <table class="w-full ml-[20px] table-auto">
                        <thead>
                            <tr class="hover:bg-[#fffbb8]">
                                <td>Name</td>
                                <td>Price</td>
                                <td>Holdings</td>
                                <td>Profit/Loss</td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="hover:bg-[#fffbb8]">
                                <td>Oasis Network ($ROSE)</td>
                                <td>0.21$</td>
                                <td>6000 ROSE</td>
                                <td>+150$</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            
            <div id="favourites" class="w-[30%] bg-gradient-to-b from-[#FCF8BD] to-[#FFF89A] pt-[30px] pl-[5%]">
                <h1 class="font-bold text-2xl">Favourites assets</h1>
                <table class="table-auto w-full">
                    <thead>
                        <tr>
                            <td class="text-center">Status</td>
                            <td>Name</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-center"><button><i class="fa fa-star"></i></button></td>
                            <td>Oasis Network ($ROSE)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </body>
</html>